@model IEnumerable<KonyvLab.dal.Models.Review>
    <div>
        <h2>Hello and Welcome to the Kony Lab homepage!</h2>
        <p>The purpose of this website to review and rate a book that you've read and help people decide if it's worth to pick it up themselfes. You can search for authors, titles or users and you can also send personal message to other users. </p>
        <p>If you enjoy someone's revews you can subscribe to that user and get notified when they upload new reviews.</p>
    </div>
    <a class="btn btn-default" href="/Review/Add">Add your own review now!</a>


    <h2>Top 10 most read reviews</h2>

    <table class="table table-striped table-responsive table-bordered" border="1">
        <tr>
            <th>By</th>
            <th>Cover</th>
            <th>Book Author</th>
            <th>Book Title</th>
            <th>Rating</th>
            <th>#Views</th>
            <th>Read</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    <a href="/Profile/Index/@item.UserName"> @item.UserName</a>
                </td>
                <td align="center">
                    <img height="70px" src="@item.ImageLink" />
                </td>
                <td valign="middle">
                    @item.Author
                </td>
                <td valign="middle">
                    @item.Title
                </td>
                <td align="center">
                    @item.Rating
                </td>
                <td align="center">
                    @item.ViewCount
                </td>
                <td align="center">
                    <a href="/Review/Read/@item._id.ToString()"><span aria-hidden="true" class="glyphicon glyphicon-modal-window"></span></a>
                </td>
            </tr>
        }
    </table>

